{
  "name": "@bachman-dev/api-server",
  "private": true,
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "pnpm check-types && wrangler deploy --dry-run --outdir dist",
    "check-types": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply api-bachman-dev",
    "deploy": "pnpm check-types && wrangler deploy",
    "dev": "wrangler dev",
    "dev:cron": "wrangler dev --test-scheduled",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node ./dist/index.js"
  },
