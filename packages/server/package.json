    "hono": "4.6.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20241011.0",
    "drizzle-kit": "0.24.2",
    "typescript": "5.4.5",
    "wrangler": "3.80.4"
  }
