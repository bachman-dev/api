{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^build"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "env": ["CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_API_TOKEN"]
    },
    "deploy": {
      "cache": false,
      "env": ["CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_API_TOKEN"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:cron": {
      "cache": false,
      "persistent": true
    },
    "lint": { "dependsOn": ["^build"], "cache": true },
    "lint:fix": { "dependsOn": ["^build"], "cache": true }
  }
}
